{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [], 
    "allowJs": true, 
    "jsx": "react-native", 
    "isolatedModules": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "moduleResolution": "node", 
    "baseUrl": "./", 
    "typeRoots": [
      "./node_modules/@types",
      "./@types",
      "./@types/core.d.ts"
    ],
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "node_modules"
  ]
}
